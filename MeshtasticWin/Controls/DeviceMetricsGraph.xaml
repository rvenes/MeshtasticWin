<UserControl
    x:Class="MeshtasticWin.Controls.DeviceMetricsGraph"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Canvas x:Name="ChartCanvas"
            Background="{ThemeResource CardBackgroundFillColorDefault}">
        <Polyline x:Name="BatteryLine"
                  Stroke="#FF4CAF50"
                  StrokeThickness="2"/>
        <Polyline x:Name="ChannelLine"
                  Stroke="#FF2196F3"
                  StrokeThickness="2"/>
        <Polyline x:Name="AirtimeLine"
                  Stroke="#FFFF9800"
                  StrokeThickness="2"/>
    </Canvas>
</UserControl>
