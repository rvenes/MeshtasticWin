<UserControl
    x:Class="MeshtasticWin.Controls.EnvironmentMetricsGraph"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid RowDefinitions="*,Auto">
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*,Auto,Auto">
            <Grid Margin="0,6,8,6"
                  RowDefinitions="Auto,*,Auto"
                  MinWidth="52">
                <TextBlock x:Name="TemperatureAxisTopText"
                           Text="—"
                           Foreground="#FF4FC3F7"
                           FontSize="10"
                           FontFamily="Consolas"
                           HorizontalAlignment="Right"/>
                <TextBlock x:Name="TemperatureAxisMidText"
                           Grid.Row="1"
                           Text="—"
                           Foreground="#FF4FC3F7"
                           FontSize="10"
                           FontFamily="Consolas"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="TemperatureAxisBottomText"
                           Grid.Row="2"
                           Text="—"
                           Foreground="#FF4FC3F7"
                           FontSize="10"
                           FontFamily="Consolas"
                           HorizontalAlignment="Right"/>
            </Grid>

            <Grid Grid.Column="1"
                  x:Name="PlotHost"
                  Background="{ThemeResource CardBackgroundFillColorDefault}">
                <Canvas x:Name="GridCanvas"
                        IsHitTestVisible="False"/>
                <Canvas x:Name="ChartCanvas"
                        Background="Transparent">
                    <Polyline x:Name="TemperatureLine"
                              Stroke="#FF4FC3F7"
                              StrokeThickness="2.2"
                              StrokeLineJoin="Round"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"/>
                    <Polyline x:Name="HumidityLine"
                              Stroke="#FF81C784"
                              StrokeThickness="2"
                              StrokeLineJoin="Round"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"/>
                    <Polyline x:Name="PressureLine"
                              Stroke="#FFFFB74D"
                              StrokeThickness="2"
                              StrokeLineJoin="Round"
                              StrokeStartLineCap="Round"
                              StrokeEndLineCap="Round"/>
                </Canvas>
            </Grid>

            <Grid Grid.Column="2"
                  Margin="8,6,0,6"
                  RowDefinitions="Auto,*,Auto"
                  MinWidth="48">
                <TextBlock x:Name="HumidityAxisTopText"
                           Text="—"
                           Foreground="#FF81C784"
                           FontSize="10"
                           FontFamily="Consolas"
                           HorizontalAlignment="Left"/>
                <TextBlock x:Name="HumidityAxisMidText"
                           Grid.Row="1"
                           Text="—"
                           Foreground="#FF81C784"
                           FontSize="10"
                           FontFamily="Consolas"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="HumidityAxisBottomText"
                           Grid.Row="2"
                           Text="—"
                           Foreground="#FF81C784"
                           FontSize="10"
                           FontFamily="Consolas"
                           HorizontalAlignment="Left"/>
            </Grid>

            <Grid Grid.Column="3"
                  Margin="4,6,0,6"
                  RowDefinitions="Auto,*,Auto"
                  MinWidth="56">
                <TextBlock x:Name="PressureAxisTopText"
                           Text="—"
                           Foreground="#FFFFB74D"
                           FontSize="10"
                           FontFamily="Consolas"
                           HorizontalAlignment="Left"/>
                <TextBlock x:Name="PressureAxisMidText"
                           Grid.Row="1"
                           Text="—"
                           Foreground="#FFFFB74D"
                           FontSize="10"
                           FontFamily="Consolas"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="PressureAxisBottomText"
                           Grid.Row="2"
                           Text="—"
                           Foreground="#FFFFB74D"
                           FontSize="10"
                           FontFamily="Consolas"
                           HorizontalAlignment="Left"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="1"
              Margin="60,6,106,0"
              ColumnDefinitions="Auto,*,Auto"
              MinHeight="20">
            <TextBlock x:Name="AxisStartText"
                       Text="—"
                       Opacity="0.8"
                       FontSize="11"
                       FontFamily="Consolas"
                       HorizontalAlignment="Left"/>
            <TextBlock x:Name="AxisMidText"
                       Grid.Column="1"
                       Text="—"
                       Opacity="0.75"
                       FontSize="11"
                       FontFamily="Consolas"
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="AxisEndText"
                       Grid.Column="2"
                       Text="—"
                       Opacity="0.8"
                       FontSize="11"
                       FontFamily="Consolas"
                       HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</UserControl>
